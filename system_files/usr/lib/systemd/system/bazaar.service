[Unit]
Description=Bazaar background service
Documentation=https://github.com/kolunmi/bazaar
After=graphical-session.target
StartLimitBurst=10

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=flatpak run --command=bazaar io.github.kolunmi.Bazaar service
Restart=on-failure
RestartSec=1s
StandardOutput=journal

[Install]
WantedBy=multi-user.target